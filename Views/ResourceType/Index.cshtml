@model IEnumerable<Reservas.Models.ResourceType>

@{
    ViewData["Title"] = "Tipos de recurso";
}

<h1 class="mb-4 text-primary">@ViewData["Title"]</h1>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Crear nuevo tipo</a>
</div>

<table id="tabla-tipos-recurso" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre Euskera</th>
            <th>Nombre Castellano</th>
            <th style="width:220px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">No hay tipos de recurso registrados.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NameEuskera</td>
                    <td>@item.NameSpanish</td>
                    <td class="text-nowrap">
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline m-0">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('¿Estás seguro de que deseas eliminar este tipo?');">
                                    Eliminar
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(function () {
          $('#tabla-tipos-recurso').DataTable({
            paging: false,
            searching: false,
            info: false,
            ordering: true,
            order: [[0,'asc']],    // ▲ más oscura por defecto en “Nombre Euskera”
            autoWidth: false,
            columns: [
              { orderable: true },  // 0 = Nombre Euskera
              { orderable: true },  // 1 = Nombre Castellano
              { orderable: false }  // 2 = Acciones
            ],
            language: { url: '/lib/datatables/i18n/es-ES.json' }
          });
        });
    </script>
}