@model Reservas.Models.User

@{
    ViewData["Title"] = "Detalle de usuario";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">DNI</dt>
        <dd class="col-sm-10">@Model.Dni</dd>

        <dt class="col-sm-2">Tipo de usuario</dt>
        <dd class="col-sm-10">@Model.UserType?.Name</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</p>

