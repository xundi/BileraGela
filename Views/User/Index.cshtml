@model IEnumerable<Reservas.Models.User>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-success">+ Crear nuevo usuario</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Tipo de usuario</th>
            <th style="width:200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Dni</td>
                <td>@item.UserType?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>

                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
