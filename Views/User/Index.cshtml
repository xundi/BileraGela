@model IEnumerable<Reservas.Models.User>
@{
    ViewData["Title"] = "Usuarios";

    // Flecha de orden ↑↓ según sort actual
    string Arrow(string key) =>
        (ViewBag.CurrentSort as string) == key ? " ↑" :
        (ViewBag.CurrentSort as string) == key + "_desc" ? " ↓" : "";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-success">+ Crear nuevo usuario</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.DniSortParm">
                    DNI@( (ViewBag.CurrentSort as string) == "dni" ? " ↑"
                                        : (ViewBag.CurrentSort as string) == "dni_desc" ? " ↓" : "" )
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.TipoSortParm">
                    Tipo de usuario@( (ViewBag.CurrentSort as string) == "tipo" ? " ↑"
                                        : (ViewBag.CurrentSort as string) == "tipo_desc" ? " ↓" : "" )
                </a>
            </th>
            <th style="width:220px">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Dni</td>
                <td>@item.UserType?.Name</td> @* usa .NameSpanish si esa es tu propiedad *@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('¿Eliminar este usuario?');">
                            Eliminar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
