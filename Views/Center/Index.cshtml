@model IEnumerable<Reservas.Models.Center>

@{
    ViewData["Title"] = "Lista de Centros";
}

<h1 class="mb-4 text-primary">@ViewData["Title"]</h1>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">+ Crear nuevo centro</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().NameEuskera)</th>
            <th>@Html.DisplayNameFor(model => model.First().NameSpanish)</th>
            <th style="width: 200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">No hay centros registrados.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NameEuskera</td>
                    <td>@item.NameSpanish</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este centro?');">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
