@model Reservas.Models.Center

@{
    ViewData["Title"] = "Detalles del Centro";
}

<h1 class="mb-4 text-primary">Detalles del Centro</h1>

<div>
    <h4 class="text-secondary">Centro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Nombre en Euskera</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.NameEuskera)</dd>

        <dt class="col-sm-3">Nombre en Castellano</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.NameSpanish)</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
</div>
