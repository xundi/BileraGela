@{
}
@model Reservas.Models.Center

@{
    ViewData["Title"] = "Crear centro";
}

<h2>Crear Centro</h2>

<form asp-action="Create" asp-controller="Center" method="post">

    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="NameEuskera" class="form-label">Nombre en Euskera</label>
        <input asp-for="NameEuskera" class="form-control" />
        <span asp-validation-for="NameEuskera" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="NameSpanish" class="form-label">Nombre en Castellano</label>
        <input asp-for="NameSpanish" class="form-control" />
        <span asp-validation-for="NameSpanish" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Mensaje"]</div>
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
