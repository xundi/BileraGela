@model IEnumerable<Reservas.Models.Resource>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Lista de Recursos";
    var tipoUsuario = Context.Session.GetInt32("UserTypeId") ?? 0;
}

<h2 class="mb-4">@ViewData["Title"]</h2>

@if (tipoUsuario == 3) // Solo administrador puede crear
{
    <a asp-action="Create" class="btn btn-primary mb-3">+ Nuevo Recurso</a>
}

<table id="tabla-recursos" class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>Centro</th>
            <th>Tipo de Recurso</th>
            <th>Nombre (EU)</th>
            <th>Nombre (ES)</th>
            <th class="no-sort" style="width:180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Center?.NameSpanish</td>
                <td>@r.ResourceType?.NameSpanish</td>
                <td>@r.NameEuskera</td>
                <td>@r.NameSpanish</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@r.Id" class="btn btn-danger">Eliminar</a>
                        <a asp-controller="Reservas" asp-action="Create" asp-route-recursoId="@r.Id"
                           class="btn btn-success">Reservar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["Mensaje"]
    </div>
}

@section Scripts {
    <script>
        $(function () {
          $('#tabla-recursos').DataTable({
            // 👇 Fuerza el orden inicial por la 1ª columna (Centro) ascendente
            order: [[0, 'asc']],
            orderMulti: false,          // evita orden múltiple por varias columnas
            paging: true,               // lo que ya uses aquí…
            searching: true,
            info: true,
            autoWidth: false,
            columns: [
              { orderable: true },   // 0 Centro  -> ordenable
              { orderable: true },   // 1 Tipo    -> ordenable
              { orderable: true },   // 2 Nombre(EU)
              { orderable: true },   // 3 Nombre(ES)
              { orderable: false }   // 4 Acciones -> NO ordenable
            ],
            language: { url: '/lib/datatables/i18n/es-ES.json' }
          });
        });
    </script>
}

