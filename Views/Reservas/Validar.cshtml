@model List<Reservas.Models.Booking>

@{
    ViewData["Title"] = "Validar Reservas";
}


@if (!Model.Any())
{
    <div class="alert alert-info text-center">No hay reservas pendientes.</div>
}
else
{
   <h2 class="mb-4 text-center text-primary">✅ Reservas pendientes por validar</h2>
 <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Centro</th>
                <th>Recurso</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Usuario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var reserva in Model)
        {
            <tr>
                <td>@reserva.Resource?.Center?.NameSpanish</td>
                <td>@reserva.Resource?.NameSpanish</td>
                <td>@reserva.FechaInicio.ToString("g")</td>
                <td>@reserva.FechaFin.ToString("g")</td>
                <td>@reserva.Usuario</td>
                <td>
                    <form asp-action="ValidarReserva" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@reserva.Id" />
                        <input type="hidden" name="accion" value="validar" />
                        <button type="submit" class="btn btn-success btn-sm">✅ Validar</button>
                    </form>
                    <form asp-action="ValidarReserva" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@reserva.Id" />
                        <input type="hidden" name="accion" value="rechazar" />
                         <button type="button"
                            class="btn btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#modalRechazo"
                            data-id="@reserva.Id">
                      ❌ Rechazar
                    </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

                        <div class="modal fade" id="modalRechazo" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form asp-action="ValidarReserva" method="post" class="modal-content">
      @Html.AntiForgeryToken()
      <input type="hidden" name="id" id="rechazo-id" />
      <input type="hidden" name="accion" value="rechazar" />

      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title">Rechazar reserva</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <label class="form-label">Motivo del rechazo (obligatorio)</label>
        <textarea name="motivo" class="form-control" rows="4" required></textarea>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-danger">Rechazar</button>
      </div>
    </form>
  </div>
</div>

@section Scripts{
<script>
  const modal = document.getElementById('modalRechazo');
  modal.addEventListener('show.bs.modal', function (ev) {
    const btn = ev.relatedTarget;
    const id = btn.getAttribute('data-id');
    document.getElementById('rechazo-id').value = id;
  });
</script>
}