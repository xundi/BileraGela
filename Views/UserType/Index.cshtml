@model IEnumerable<Reservas.Models.User>

@{
    ViewData["Title"] = "Usuarios";
}

<h2 class="mb-4">Usuarios</h2>

<a class="btn btn-success mb-3" asp-action="Create">+ Crear nuevo usuario</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Tipo de usuario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">No hay usuarios registrados.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Dni</td>
                    <td>@item.UserType?.Name</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
